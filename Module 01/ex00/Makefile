NAME = my_program

SRC_DIR = source
INC_DIR = include

SRC_FILES = $(wildcard $(SRC_DIR)/*.cpp) main.cpp

OBJ_FILES = $(SRC_FILES:.cpp=.o)

CXX = c++
CXXFLAGS = -g -Wall -Wextra -Werror -std=c++98 -I$(INC_DIR)

ifeq ($(DEBUG), 1)
    CXXFLAGS += -DDEBUG
    DEBUG_MSG = "üîß Mode DEBUG activ√©"
else
    DEBUG_MSG = "üöÄ Mode DEBUG d√©sactiv√©"
endif

ifeq ($(VERBOSE), 1)
    CXXFLAGS += -DVERBOSE
    VERBOSE_MSG = "üó£Ô∏è Mode VERBOSE activ√©"
else
    VERBOSE_MSG = "üîá Mode VERBOSE d√©sactiv√©"
endif

all: $(NAME)
	@echo "$(DEBUG_MSG)"
	@echo "$(VERBOSE_MSG)"

$(NAME): $(OBJ_FILES)
	$(CXX) $(CXXFLAGS) -o $@ $^

%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -f $(OBJ_FILES)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re
